# Django Settings
DJANGO_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DB_NAME=money_transfer_db
DB_USER=root
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@moneytransfer.com

# SMS Provider (Africa's Talking)
SMS_PROVIDER=africastalking
SMS_API_KEY=your-africastalking-api-key
SMS_USERNAME=sandbox

# AwdPay Integration
AWDPAY_API_KEY=your-awdpay-api-key
AWDPAY_API_SECRET=your-awdpay-api-secret
AWDPAY_BASE_URL=https://api.awdpay.com/v1
AWDPAY_WEBHOOK_SECRET=your-webhook-secret

# AWS S3 (for production)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=moneytransfer-media
AWS_S3_REGION_NAME=eu-west-1

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn
