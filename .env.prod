# Django Settings
DJANGO_ENV=production
DJANGO_SETTINGS_MODULE=config.settings.prod
# SECURITY: generate a strong, unique key and NEVER commit it
SECRET_KEY=change-this-to-a-strong-random-production-secret-key
DEBUG=False
# Only domains/hosts that should serve your API
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com


# Database (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_HOST=postgres            # or actual host if managed DB
DB_PORT=5432
DB_NAME=chic_transfer_prod  # your prod DB name
DB_USER=chic_user_prod      # your prod DB user
DB_PASSWORD=super-strong-prod-password


# Redis
REDIS_HOST=redis            # or real host if external
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=             # set if your Redis is password-protected

# CORS
CORS_ALLOWED_ORIGINS=https://app.yourdomain.com,https://yourdomain.com


# Email (Production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True

EMAIL_HOST_USER=your-production-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password
DEFAULT_FROM_EMAIL=your-production-email@example.com

# SMS Provider (Africa's Talking)
SMS_PROVIDER=africastalking
SMS_API_KEY=your-production-africastalking-api-key
SMS_USERNAME=your-production-username

# AwdPay Integration
AWDPAY_API_KEY=your-prod-awdpay-api-key
AWDPAY_API_SECRET=your-prod-awdpay-api-secret
AWDPAY_BASE_URL=https://api.awdpay.com/v1
AWDPAY_WEBHOOK_SECRET=your-prod-webhook-secret

# AWS S3 (for production)
AWS_ACCESS_KEY_ID=your-prod-aws-access-key
AWS_SECRET_ACCESS_KEY=your-prod-aws-secret-key
AWS_STORAGE_BUCKET_NAME=moneytransfer-media-prod
AWS_S3_REGION_NAME=eu-west-1

# Sentry (error tracking)
SENTRY_DSN=your-production-sentry-dsn

